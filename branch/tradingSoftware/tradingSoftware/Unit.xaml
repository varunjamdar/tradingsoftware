            <TabItem Name="UnitTab" Header="Unit" Background="DarkKhaki">
                <Grid Name="UnitGrid">
                    <Label Height="28" HorizontalAlignment="Left" Margin="181,44,0,0" Name="label9" VerticalAlignment="Top" Width="43">Name</Label>
                    <Label HorizontalAlignment="Left" Margin="158,104,0,0" Name="label2" Width="81" Height="27" VerticalAlignment="Top">Print Name</Label>
