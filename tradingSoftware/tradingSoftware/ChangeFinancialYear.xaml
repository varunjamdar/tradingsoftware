<Window x:Class="tradingSoftware.ChangeFinancialYear"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="ChangeFinancialYear" Height="418" Width="656">
    <Grid Name="GridChangeFinancialYearMain">
        <ComboBox Height="23" HorizontalAlignment="Right" Margin="0,83,182,0" Name="cBYears" VerticalAlignment="Top" Width="120">
            <ComboBoxItem>2008-2009</ComboBoxItem>
            <ComboBoxItem>2009-2010</ComboBoxItem>
        </ComboBox>
        <RadioButton GroupName="changeType" Height="16" HorizontalAlignment="Left" Margin="78,58,0,0" Name="rBtnLatest" VerticalAlignment="Top" Width="196" Checked="rBtnLatest_Checked" >Latest Financial Year</RadioButton>
        <RadioButton GroupName="changeType" Height="16" HorizontalAlignment="Left" Margin="78,83,0,0" Name="rBtnPrevious" VerticalAlignment="Top" Width="196" IsChecked="True" Checked="rBtnPrevious_Checked">Other Financial Year</RadioButton>
        
        <Button Height="36" HorizontalAlignment="Left" Margin="128,0,0,148" Name="btnChangeFinancialYear" VerticalAlignment="Bottom" Width="131" Click="btnChangeFinancialYear_Click">Change Financial Year</Button>
        <Button Height="36" HorizontalAlignment="Right" Margin="0,0,212,148" Name="btnClose" VerticalAlignment="Bottom" Width="102" Click="btnClose_Click">Close</Button>
    </Grid>
</Window>
