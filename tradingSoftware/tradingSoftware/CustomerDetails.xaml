<Window x:Class="tradingSoftware.CustomerDetails"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Customer Details" Height="600" Width="900" FontSize="14">
    <Grid Name="CustomerDetailsMain">
        <TabControl Name="tabControl1" SelectedIndex="0" Background="FloralWhite">
            <TabItem Header="Personal Information" IsSelected="True" Background="DarkKhaki">
                <Grid ShowGridLines="False" Margin="1,0,9,32" Height="504">
                    <Label Grid.Column="4" Height="28" HorizontalAlignment="Left" Margin="22,24,0,0" Name="label1" VerticalAlignment="Top" Width="94">Customer ID</Label>
                    <TextBox Grid.Column="4" Height="23" HorizontalAlignment="Left" Margin="119,24,0,0" Name="textBox6" VerticalAlignment="Top" Width="62" />

                    <TextBox Height="23" Margin="149,135,0,0" Name="textBox2" VerticalAlignment="Top" HorizontalAlignment="Left" Width="189" Grid.Column="4" />
                    <Label Height="28" Margin="12,133,0,0" Name="label2" VerticalAlignment="Top" Grid.Column="4" HorizontalAlignment="Left" Width="135">Customer Company</Label>
                    <Label Height="28" Margin="0,100,378,0" Name="label5" VerticalAlignment="Top" Grid.Column="4" HorizontalAlignment="Right" Width="64.002">Address</Label>
                    <TextBox Height="23" Margin="0,100,45,0" Name="textBox3" VerticalAlignment="Top" Grid.Column="4" HorizontalAlignment="Right" Width="325" />
                    <TextBox Height="23" Margin="0,128,45,0" Name="textBox4" VerticalAlignment="Top" Grid.Column="4" HorizontalAlignment="Right" Width="325" />
                    <TextBox Height="23" Margin="0,156,45,0" Name="textBox5" VerticalAlignment="Top" Grid.Column="4" HorizontalAlignment="Right" Width="325" />
                    <Label Height="28" Margin="0,186,386,0" Name="label7" VerticalAlignment="Top" Grid.Column="4" HorizontalAlignment="Right" Width="56.002">State</Label>
                    <Label Height="28" Margin="29,0,0,134" Name="label10" VerticalAlignment="Bottom" Grid.Column="4" HorizontalAlignment="Left" Width="63">Website</Label>
                    <Label Height="28" Margin="29,0,0,95" Name="label11" VerticalAlignment="Bottom" Grid.Column="4" HorizontalAlignment="Left" Width="63">Email ID</Label>
                    <Label Height="28" Margin="29,0,0,55" Name="label12" VerticalAlignment="Bottom" Grid.Column="4" HorizontalAlignment="Left" Width="63">Fax</Label>
                    <TextBox Height="23" HorizontalAlignment="Left" Margin="117,0,0,137" Name="textBox9" VerticalAlignment="Bottom" Width="195" Grid.Column="4" />
                    <TextBox Height="23" HorizontalAlignment="Left" Margin="117,0,0,95" Name="textBox10" VerticalAlignment="Bottom" Width="195" Grid.Column="4" />
                    <TextBox Height="23" Margin="117,0,0,55" Name="textBox11" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="185" Grid.Column="4" />
                    <Label Height="28" Margin="390,0,378,139" Name="label13" VerticalAlignment="Bottom" Grid.Column="4">Phone No 1</Label>
                    <Label Height="28" Margin="390,0,378,97" Name="label14" VerticalAlignment="Bottom" Grid.Column="4">Phone No 2</Label>
                    <TextBox Height="23" Margin="0,0,164,139" Name="textBox12" VerticalAlignment="Bottom" Grid.Column="4" HorizontalAlignment="Right" Width="195" />
                    <TextBox Height="23" Margin="0,0,164,97" Name="textBox13" VerticalAlignment="Bottom" Grid.Column="4" HorizontalAlignment="Right" Width="195" />
                    <Label Height="28" Margin="0,229,400,0" Name="label16" VerticalAlignment="Top" Grid.Column="4" HorizontalAlignment="Right" Width="42.002">City</Label>
                    <Label Height="28" HorizontalAlignment="Right" Margin="0,229,162,0" Name="label17" VerticalAlignment="Top" Width="39" Grid.Column="4">Pin</Label>
                    <TextBox Height="23" HorizontalAlignment="Right" Margin="0,231,39,0" Name="textBox14" VerticalAlignment="Top" Width="131" Grid.Column="4" />
                    <GroupBox Header="Address Details" Margin="0,59,29,0" Name="groupBox3" Foreground="BlueViolet" BorderBrush="DarkOliveGreen" BorderThickness="2" HorizontalAlignment="Right" Width="427" Height="216" VerticalAlignment="Top" />
                    <GroupBox Header="Contacts" Margin="12,0,15,39" Name="groupBox4" Foreground="BlueViolet" BorderBrush="DarkOliveGreen" BorderThickness="2" Opacity="1" Grid.Column="4" Height="159" VerticalAlignment="Bottom"></GroupBox>
                    <Label Height="28" Margin="12,192,0,0" Name="label3" VerticalAlignment="Top" Grid.Column="4" HorizontalAlignment="Left" Width="120">Contact Person</Label>
                    <TextBox Height="23" HorizontalAlignment="Left" Margin="149,192,0,0" Name="textBox1" VerticalAlignment="Top" Width="189" Grid.Column="4" />
                    <ComboBox Grid.Column="4" Height="23" HorizontalAlignment="Right" Margin="0,191,120,0" Name="comboBox1" VerticalAlignment="Top" Width="250" />
                    <ComboBox Grid.Column="4" Height="23" HorizontalAlignment="Right" Margin="0,234,201,0" Name="comboBox2" VerticalAlignment="Top" Width="169" />
                    <GroupBox BorderBrush="DarkOliveGreen" BorderThickness="2" FontSize="14" Foreground="BlueViolet" Header="Basic" HorizontalAlignment="Left" Margin="12,77,0,0" Name="groupBox2" Width="357" Height="178" VerticalAlignment="Top" />
                </Grid>
            </TabItem>
            <TabItem Header="Registration No." IsSelected="True" Background="DarkKhaki">
                <Grid Name="gridCoregDet">
                    <GroupBox Header="Other Details" Margin="0,67,10,0" Name="groupBox6" Foreground="BlueViolet" BorderBrush="DarkOliveGreen" BorderThickness="2" HorizontalAlignment="Right" Width="374" Height="239" VerticalAlignment="Top" />
                    <GroupBox Header="VAT/GST and CST No." Margin="13,31,407,180" Name="groupBox5" Foreground="BlueViolet" BorderBrush="DarkOliveGreen" BorderThickness="2" />
                    <Label Height="28" HorizontalAlignment="Left" Margin="25,69,0,0" Name="label8" VerticalAlignment="Top" Width="112">Enable VAT/GST</Label>
                    <ComboBox Height="23" HorizontalAlignment="Left" Margin="142,69,0,0" Name="cmbVatGst" VerticalAlignment="Top" Width="80" >
                        <ComboBoxItem>Yes</ComboBoxItem>
                        <ComboBoxItem>No</ComboBoxItem>
                    </ComboBox>
                    <Label Height="28" HorizontalAlignment="Left" Margin="261,69,0,0" Name="label9" VerticalAlignment="Top" Width="56">Type</Label>
                    <ComboBox Height="23" Margin="310,69,0,0" Name="cmbVatGstType" VerticalAlignment="Top" HorizontalAlignment="Left" Width="74" IsHitTestVisible="False" IsEditable="False" IsEnabled="False">
                        <ComboBoxItem>VAT</ComboBoxItem>
                        <ComboBoxItem>GST</ComboBoxItem>
                    </ComboBox>
                    <Label Height="28" HorizontalAlignment="Left" Margin="35,122,0,0" Name="label15" VerticalAlignment="Top" Width="66">TIN No.</Label>
                    <TextBox Height="23" HorizontalAlignment="Left" Margin="142,127,0,0" Name="txtCompanyTinNo" VerticalAlignment="Top" Width="242" IsEnabled="False"/>
                    <Label Height="28" HorizontalAlignment="Left" Margin="35,161,0,0" Name="label18" VerticalAlignment="Top" Width="102">VAT/GST Date</Label>
                    <my:DatePicker Height="25" HorizontalAlignment="Left" Margin="142,164,0,0" Name="dtVatGstDate" VerticalAlignment="Top" Width="133" xmlns:my="http://schemas.microsoft.com/wpf/2008/toolkit" IsEnabled="False"/>
                    <Label Height="28" HorizontalAlignment="Left" Margin="35,232,0,0" Name="label19" VerticalAlignment="Top" Width="66">CST No.</Label>
                    <TextBox Height="23" HorizontalAlignment="Left" Margin="142,237,0,0" Name="txtCstNo" VerticalAlignment="Top" Width="242" />
                    <Label Height="28" HorizontalAlignment="Left" Margin="35,0,0,212" Name="label20" VerticalAlignment="Bottom" Width="89">CST Date</Label>
                    <my:DatePicker Height="25" HorizontalAlignment="Left" Margin="142,0,0,212" Name="dtCstDate" VerticalAlignment="Bottom" Width="133" xmlns:my="http://schemas.microsoft.com/wpf/2008/toolkit" />
                    <Label Height="28" HorizontalAlignment="Right" Margin="0,99,287,0" Name="label21" VerticalAlignment="Top" Width="70">PAN No.</Label>
                    <TextBox Height="23" HorizontalAlignment="Right" Margin="0,99,68,0" Name="TxtPanNo" VerticalAlignment="Top" Width="195" />
                    <Label Height="28" HorizontalAlignment="Right" Margin="0,167,262,0" Name="label22" VerticalAlignment="Top" Width="108">Service Tax No</Label>
                    <TextBox Height="23" HorizontalAlignment="Right" Margin="0,169,68,0" Name="TxtServiceTaxNo" VerticalAlignment="Top" Width="195" />

                    <Label HorizontalAlignment="Right" Margin="0,240,213,0" Name="label24" Width="157" Height="28.1" VerticalAlignment="Top">Credit Capacity Offered</Label>
                    <TextBox HorizontalAlignment="Right" Margin="0,242,68,0" Name="textBox7" Width="135" Height="23" VerticalAlignment="Top" />
                    <Label Height="28" HorizontalAlignment="Right" Margin="0,256.1,287,0" Name="label4" VerticalAlignment="Top" Width="54">(days)</Label>
                </Grid>
            </TabItem>
            <TabItem Header="Company Profile" IsSelected="True" Background="DarkKhaki">
                <Grid Name="gridCoImg">
                    <Label Height="28" HorizontalAlignment="Left" Margin="46,76,0,0" Name="label26" VerticalAlignment="Top" Width="194">Credit Rating (market value)</Label>
                    <ComboBox Height="23" HorizontalAlignment="Left" Margin="248,81,0,0" Name="comboBox6" VerticalAlignment="Top" Width="120" />
                    <Label Height="28" HorizontalAlignment="Left" Margin="46,142,0,0" Name="label27" VerticalAlignment="Top" Width="120">Customer Type</Label>
                    <ComboBox Height="23" HorizontalAlignment="Left" Margin="248,147,0,0" Name="comboBox7" VerticalAlignment="Top" Width="120" />
                </Grid>
            </TabItem>
        </TabControl>
        <Button Height="29" Width="108" HorizontalAlignment="Left" Margin="140,0,0,18" Name="btnNew" VerticalAlignment="Bottom" >New</Button>
        <Button Height="29" HorizontalAlignment="Left" Margin="294,0,0,18" Name="btnSave" VerticalAlignment="Bottom" Width="108">Save</Button>
        <Button Height="29" Margin="0,0,315,18" Name="btnFind" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="108">Find</Button>
        <Button Height="29" HorizontalAlignment="Right" Margin="0,0,161,18" Name="btnClose" VerticalAlignment="Bottom" Width="108">Close</Button>
    </Grid>
</Window>
