<Window x:Class="tradingSoftware.Window2"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Window2" Height="600" Width="1000">
    <Grid>
        <Menu Height="22" Name="menu1" VerticalAlignment="Top" >
            <Menu.BitmapEffect>
                <DropShadowBitmapEffect Color="Indigo" />
            </Menu.BitmapEffect>
            <MenuItem Name="Company" Header="Company">
                <MenuItem Name="CompanyConfig" Header="Company Configuration" Click="CompanyConfig_Click"/>
                <MenuItem Name="EditCompany" Header="Edit Company"/>
            </MenuItem>
            <MenuItem Name="BasicConfiguration" Header="Basic Configuration">
                <MenuItem Name="Location" Header="Location Setup"/>
                <MenuItem Name="Unit" Header="Unit Setup" Click="Unit_Click"/>
                <MenuItem Name="Database" Header="Database">
                    <MenuItem.BitmapEffect>
                        <OuterGlowBitmapEffect GlowColor="LightGray" />
                    </MenuItem.BitmapEffect>
                    <MenuItem Name="RestoreDb" Header="Restore Database"/>
                    <MenuItem Name="BackupDb" Header="Backup Database"/>
                </MenuItem>
            </MenuItem>
            <MenuItem Name="SupplierCustomerConfig" Header="Supplier/Customer Configuration">
                <MenuItem Name="SupplierDetails" Header="Supplier Details"/>
                <MenuItem Name="CustomerDetails" Header="Customer Details"/> 
            </MenuItem>
            <MenuItem Name="Transacton" Header="Transaction">
                
            </MenuItem>            
        </Menu>
        <Grid Name="MainGrid" Height="239" Margin="0,25,329,0" VerticalAlignment="Top" />
    </Grid>
</Window>
