<Window x:Class="tradingSoftware.Purchase1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Purchase1" Height="600" Width="900">
    <Grid Name="PurchaseForm">
        <TabControl Name="tabControl1" Margin="0,0,0,0" >
            <TabItem Header="Purchase Form">
                <Grid Name="PurchaseFormGrid">
                    
                </Grid>
            </TabItem>
        </TabControl>
        <Label Height="28" HorizontalAlignment="Left" Margin="22,60,0,0" Name="label1" VerticalAlignment="Top" Width="83">Voucher No.</Label>
        <TextBox Height="23" HorizontalAlignment="Left" Margin="115,60,0,0" Name="txtVoucherNo" VerticalAlignment="Top" Width="96" />
        <Label Height="28" HorizontalAlignment="Left" Margin="261,54,0,0" Name="label2" VerticalAlignment="Top" Width="37">Date</Label>
        <my:DatePicker Height="25" Margin="307,56,0,0" Name="datePicker1" VerticalAlignment="Top" xmlns:my="http://schemas.microsoft.com/wpf/2008/toolkit" HorizontalAlignment="Left" Width="115" />
        <Label Height="28" Margin="495,55,0,0" Name="label3" VerticalAlignment="Top" HorizontalAlignment="Left" Width="83">Manufacturar</Label>
        <ComboBox Height="23" HorizontalAlignment="Left" Margin="614,57,0,0" Name="comboBox1" VerticalAlignment="Top" Width="220" />
        <my:DataGrid AutoGenerateColumns="False" Height="202" Margin="32,0,27,24" Name="dataGrid1" VerticalAlignment="Bottom" xmlns:my="http://schemas.microsoft.com/wpf/2008/toolkit" />
        <Label Height="28" HorizontalAlignment="Left" Margin="22,144,0,0" Name="label4" VerticalAlignment="Top" Width="43">Item</Label>
        <ComboBox Height="23" HorizontalAlignment="Left" Margin="91,144,0,0" Name="comboBox2" VerticalAlignment="Top" Width="120" />
        <Label Height="28" HorizontalAlignment="Left" Margin="22,190,0,0" Name="label5" VerticalAlignment="Top" Width="62">Quantity</Label>
        <TextBox Height="23" HorizontalAlignment="Left" Margin="91,192,0,0" Name="textBox1" VerticalAlignment="Top" Width="120" />
        <Label Height="28" HorizontalAlignment="Left" Margin="10,241,0,0" Name="label6" VerticalAlignment="Top" Width="95">Price Per Unit</Label>
        <TextBox HorizontalAlignment="Left" Margin="115,241,0,0" Name="textBox2" Width="96" Height="23" VerticalAlignment="Top" />
        <Label Height="28" Margin="337,144,0,0" Name="label7" VerticalAlignment="Top" HorizontalAlignment="Left" Width="85">Taxex Levied</Label>
        <ComboBox Height="23" HorizontalAlignment="Right" Margin="0,144,317,0" Name="comboBox3" VerticalAlignment="Top" Width="120" />
        <Label Height="28" Margin="337,187,421,0" Name="label8" VerticalAlignment="Top">Total(Taxes Incl)</Label>
        <TextBox Height="23" HorizontalAlignment="Right" Margin="0,195,277,0" Name="textBox3" VerticalAlignment="Top" Width="160" />
        <Button Height="23" HorizontalAlignment="Left" Margin="161,0,0,245" Name="button1" VerticalAlignment="Bottom" Width="98">Add Purchase</Button>
        <Button Height="23" Margin="366,0,437,245" Name="button2" VerticalAlignment="Bottom">Reset</Button>
        <Button Height="23" HorizontalAlignment="Left" Margin="544,0,0,245" Name="button3" VerticalAlignment="Bottom" Width="75">Close</Button>
    </Grid>
</Window>
