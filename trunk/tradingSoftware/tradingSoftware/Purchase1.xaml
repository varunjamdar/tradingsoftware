<Window x:Class="tradingSoftware.Purchase1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Purchase1" Height="600" Width="900">
    <Grid Name="PurchaseForm">
        <TabControl Name="tabControl1" Margin="0,0,0,0" SelectedIndex="1">
            <TabItem Header="Purchase Form" FontSize="14">
                <Grid Name="PurchaseFormGrid">
                    <Label Height="28" HorizontalAlignment="Left" Margin="10,10,0,0" Name="label9" VerticalAlignment="Top" Width="115">Purchase Order No.</Label>
                    <TextBox Height="23" HorizontalAlignment="Left" Margin="134,12,0,0" Name="textBox4" VerticalAlignment="Top" Width="96" />
                    <Label Height="28" HorizontalAlignment="Left" Margin="27,53,0,0" Name="label1" VerticalAlignment="Top" Width="83">Voucher No.</Label>
                    <TextBox Height="23" HorizontalAlignment="Left" Margin="134,53,0,0" Name="txtVoucherNo" VerticalAlignment="Top" Width="96" />
                    <Label Height="28" HorizontalAlignment="Left" Margin="283,48,0,0" Name="label2" VerticalAlignment="Top" Width="37">Date</Label>
                    <my:DatePicker Height="25" Margin="332,49,421,0" Name="datePicker1" VerticalAlignment="Top" xmlns:my="http://schemas.microsoft.com/wpf/2008/toolkit" />
                    <Label Height="28" Margin="0,48,295,0" Name="label3" VerticalAlignment="Top" HorizontalAlignment="Right" Width="83">Manufacturer</Label>
                    <ComboBox Height="23" HorizontalAlignment="Right" Margin="0,50,39,0" Name="comboBox1" VerticalAlignment="Top" Width="220" />
                    <Label Height="28" HorizontalAlignment="Left" Margin="256,8,0,0" Name="label10" VerticalAlignment="Top" Width="64">PO  Date</Label>
                    <my:DatePicker Height="25" Margin="332,8,0,0" Name="datePicker2" VerticalAlignment="Top" xmlns:my="http://schemas.microsoft.com/wpf/2008/toolkit" HorizontalAlignment="Left" Width="115" />
                    <Label Height="28" Margin="16,127,0,0" Name="label7" VerticalAlignment="Top" HorizontalAlignment="Left" Width="85">Item Group</Label>
                    <ComboBox Height="23" HorizontalAlignment="Left" Margin="120,127,0,0" Name="comboBox3" VerticalAlignment="Top" Width="156" />
                    <Button Margin="485,223,0,0" Name="button1" HorizontalAlignment="Left" Width="98" Height="23" VerticalAlignment="Top">Add Purchase</Button>
                    <Button Margin="607,225,0,0" Name="button2" HorizontalAlignment="Left" Width="75" Height="23" VerticalAlignment="Top">Reset</Button>
                    <Button HorizontalAlignment="Left" Margin="721,225,0,0" Name="button3" Width="75" Height="23" VerticalAlignment="Top">Close</Button>
                    <Label HorizontalAlignment="Left" Margin="37,223,0,0" Name="label5" Width="62" Height="28.04" VerticalAlignment="Top">Quantity</Label>
                    <TextBox HorizontalAlignment="Left" Margin="106,225,0,0" Name="textBox1" Width="120" Height="23.04" VerticalAlignment="Top" />
                    <Label HorizontalAlignment="Left" Margin="245,220,0,0" Name="label6" Width="95" Height="28" VerticalAlignment="Top">Price Per Unit</Label>
                    <TextBox Margin="350,220,422,0" Name="textBox2" Height="23" VerticalAlignment="Top" />
                    <Label Height="28" HorizontalAlignment="Left" Margin="56,170,0,0" Name="label4" VerticalAlignment="Top" Width="43">Item</Label>
                    <ComboBox Height="23" HorizontalAlignment="Left" Margin="120,170,0,0" Name="comboBox2" VerticalAlignment="Top" Width="241" SelectionChanged="comboBox2_SelectionChanged" />
                    <my:DataGrid AutoGenerateColumns="False" Height="202" Margin="32,0,27,24" Name="dataGrid1" VerticalAlignment="Bottom" xmlns:my="http://schemas.microsoft.com/wpf/2008/toolkit" />
                </Grid>
            </TabItem>
            <TabItem Header="TaxDetails" FontSize="14">
                <Grid Name="TaxDetailsGrid">
                    <Label Height="28" HorizontalAlignment="Left" Margin="66,35,0,0" Name="label8" VerticalAlignment="Top" Width="76">Tax Name</Label>
                    <ComboBox Height="23" HorizontalAlignment="Left" Margin="27,68,0,0" Name="comboBox4" VerticalAlignment="Top" Width="169" />
                    <Label Height="28" HorizontalAlignment="Left" Margin="240,35,0,0" Name="label11" VerticalAlignment="Top" Width="76">Value / %</Label>
                    <ComboBox Height="23" HorizontalAlignment="Left" Margin="232,68,0,0" Name="comboBox5" VerticalAlignment="Top" Width="84" />
                    <Label Height="28" Margin="378,35,0,0" Name="label12" VerticalAlignment="Top" HorizontalAlignment="Left" Width="73">Amount</Label>
                    <TextBox Height="23" Margin="364,68,0,0" Name="textBox3" VerticalAlignment="Top" HorizontalAlignment="Left" Width="97" />
                    <Label Height="28" HorizontalAlignment="Left" Margin="523,35,0,0" Name="label13" VerticalAlignment="Top" Width="62">Type</Label>
                    <ComboBox Height="23" HorizontalAlignment="Left" Margin="497,68,0,0" Name="comboBox6" VerticalAlignment="Top" Width="113" />
                    <Button Height="23" HorizontalAlignment="Left" Margin="661,68,0,0" Name="button4" VerticalAlignment="Top" Width="75">Insert</Button>
                    <Button Height="23" HorizontalAlignment="Left" Margin="771,68,0,0" Name="button5" VerticalAlignment="Top" Width="75">Reset</Button>
                    <my:DataGrid AutoGenerateColumns="False" Margin="96,139,0,122" Name="dataGrid2" xmlns:my="http://schemas.microsoft.com/wpf/2008/toolkit" HorizontalAlignment="Left" Width="709" />
                    <Button Height="23" HorizontalAlignment="Left" Margin="684,0,0,36" Name="button6" VerticalAlignment="Bottom" Width="75">Close</Button>
                </Grid>
            </TabItem>
        </TabControl>
        
    </Grid>
</Window>
